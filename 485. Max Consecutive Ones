class Solution {
    public int findMaxConsecutiveOnes(int[] nums) {
        int n = nums.length;
        int max = 0, currMax = 0;

        //// Standard
        // for (int i = 0; i < n; i++) {
        //     if (nums[i] == 1) {
        //         currMax++;
        //         max = Math.max(max, currMax);
        //     } else {
        //         currMax = 0;
        //     }
        // }
        // return max;

        //// XOR method
        for (int i = 0; i < n; i++) {
            if (nums[i] == 1) {
                currMax++;
            }
            if (i > 0 && nums[i] == 0 && (nums[i] ^ nums[i - 1]) == 1) {
                max = Math.max(currMax, max);
                currMax = 0;
            }
        }
        max = Math.max(max, currMax);

        return max;
    }
}
